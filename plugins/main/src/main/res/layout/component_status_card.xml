<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dashboard_card_surface"
        android:padding="24dp">

        <!-- Loop Status (Top Center) -->
        <TextView
            android:id="@+id/loop_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dashboard_on_surface"
            android:alpha="0.7"
            android:text="Closed Loop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/loop_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/dashboard_loop_indicator"
            app:layout_constraintStart_toEndOf="@id/loop_status"
            app:layout_constraintTop_toTopOf="@id/loop_status"
            app:layout_constraintBottom_toBottomOf="@id/loop_status" />

        <!-- Glucose Value (Center) -->
        <TextView
            android:id="@+id/glucose_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/dashboard_on_surface"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"
            android:textStyle="bold"
            android:text="--"
            app:layout_constraintTop_toBottomOf="@id/loop_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Trend Arrow (Right of Glucose) -->
        <ImageView
            android:id="@+id/trend_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/dashboard_trend"
            app:layout_constraintStart_toEndOf="@id/glucose_value"
            app:layout_constraintBottom_toBottomOf="@id/glucose_value"
            app:layout_constraintTop_toTopOf="@id/glucose_value" />

        <!-- Delta (Bottom Center) -->
        <TextView
            android:id="@+id/delta_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/dashboard_on_surface"
            android:alpha="0.8"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:text="--"
            app:layout_constraintTop_toBottomOf="@id/glucose_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Time Ago (Bottom Right) -->
        <TextView
            android:id="@+id/time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/dashboard_on_surface"
            android:alpha="0.5"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:text="--"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/delta_value" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
