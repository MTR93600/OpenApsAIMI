<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/max_tbr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meal_parameters_hint_max_tbr"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/prebolus_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meal_parameters_hint_prebolus_1"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/prebolus_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meal_parameters_hint_prebolus_2"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/reactivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meal_parameters_hint_reactivity"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/smb_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meal_parameters_hint_smb_interval"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meal_parameters_hint_duration"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@android:string/cancel" />

            <Button
                android:id="@+id/ok_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@android:string/ok" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>