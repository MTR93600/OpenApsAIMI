<?xml version="1.0" encoding="utf-8"?>
<!-- Item layout for individual mode selection -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    tools:theme="@style/Theme.MaterialComponents.DayNight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Mode Icon -->
        <ImageView
            android:id="@+id/mode_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/mode_icon_description"
            android:scaleType="centerInside" />

        <!-- Mode Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_name_placeholder"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary" />

            <TextView
                android:id="@+id/mode_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_description_placeholder"
                android:textSize="12sp"
                android:textColor="?android:textColorSecondary"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Duration Input (compact) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="8dp">

            <!-- Duration Input with Material Design -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/duration_layout"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/duration_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:hint="@string/duration_hint"
                    android:importantForAutofill="no" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/duration_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minutes"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- SEND Button (Big & Clear) -->
        <Button
            android:id="@+id/btn_send_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_mode_button"
            android:textSize="12sp"
            android:textStyle="bold"
            android:minWidth="90dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
